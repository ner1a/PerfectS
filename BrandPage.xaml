<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerfectS.BrandPage"
             Title="Anasayfa">
    <ScrollView Orientation="Vertical"
                VerticalOptions="Center"
                HorizontalOptions="Center">
        <ScrollView Orientation="Horizontal"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">            
            <StackLayout Orientation="Vertical"
                            Margin="0,10,0,40">
                <StackLayout VerticalOptions="Start"
                             HorizontalOptions="Center"
                             Margin="0,10,0,40">
                    <Label x:Name="BrandNameLabel" FontAttributes="Bold" FontSize="35"/>
                    <Label x:Name="BrandEmployeeLabel" Text="Çalışan sayısı: "/>
                </StackLayout>
                <Button Text="Shift Oluştur" Margin="5" Clicked="ShiftCreateButtonClicked" BackgroundColor="LightGreen"/>
                <StackLayout x:Name="ShiftLayout">
                </StackLayout>
            </StackLayout>            
        </ScrollView>
    </ScrollView>
</ContentPage>