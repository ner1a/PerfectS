<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerfectS.MainPage">
    <ScrollView Orientation="Vertical">
        <StackLayout HorizontalOptions="Center">
            <Button Text="Yenile" Clicked="RefreshButtonClicked" Margin="0,20,0,10" BackgroundColor="LightGreen" WidthRequest="150"/>
            <ScrollView
            Orientation="Horizontal">
                <StackLayout x:Name="MainLayout"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Padding="20">
                </StackLayout>
            </ScrollView>
            <Button x:Name="shiftSaveButton" Text="Kaydet" Clicked="ShiftSaveClicked" Margin="0,10,0,20" BackgroundColor="LightGreen" WidthRequest="150" IsVisible="false"/>
        </StackLayout>
    </ScrollView>
</ContentPage>